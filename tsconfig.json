{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"lib": ["es2017"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "declarations",
		"skipLibCheck": true,
		"strict": true,
		"target": "es2015"
	},
	"include": ["src/**/*.js"]
}
